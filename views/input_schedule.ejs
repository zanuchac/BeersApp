<div class="modal-header">
    <span class="close-btn cancel-btn">&times;</span>
    <h3>เพิ่มงานติดตั้งใหม่</h3>
</div>

<form id="new-job-form">
    <div class="form-group">
        <label for="customer">ชื่อลูกค้า:</label>
        <input type="text" id="customerName" name="customerName" required>
    </div>
    
    <div class="form-group">
        <label for="orderId">รหัสคำสั่งซื้อ (Order ID):</label>
        <!-- เพิ่ม Order ID: กำหนดเป็น readonly เพื่อให้ JS กำหนดค่าแบบ fix value -->
        <input type="text" id="orderId" name="orderId" required readonly placeholder="จะถูกสร้างอัตโนมัติ (yyyymmddhhmmss)">
    </div>

    <div class="form-group">
        <label for="address">ที่อยู่ติดตั้ง:</label>
        <!-- เพิ่ม Address โดยใช้ textarea -->
        <textarea id="address" name="address" rows="3" required></textarea>
    </div>
    
    <div class="form-group">
        <label for="jobType">ประเภทงาน:</label>
        <select id="jobType" name="jobType" required>
            <option value="ติดตั้ง">ติดตั้ง</option>
            <option value="ซ่อมแซม">ซ่อมแซม</option>
            <option value="วัดพื้นที่">วัดพื้นที่</option>
            <option value="อื่นๆ">อื่นๆ</option>
        </select>
    </div>

    <div class="form-row">
        <div class="form-group">
            <label for="date">วันที่:</label>
            <input type="date" id="appointmentDate" name="appointmentDate" required>
        </div>
        
        <div class="form-group">
            <label for="time">เวลา:</label>
            <select id="appointmentTime" name="appointmentTime" required>
                <option value="09:00">09:00</option>
                <option value="10:00">10:00</option>
                <option value="11:00">11:00</option>
                <option value="13:00">13:00</option>
                <option value="14:00">14:00</option>
                <option value="15:00">15:00</option>
                <option value="16:00">16:00</option>
                <option value="17:00">17:00</option>
            </select>
        </div>
    </div>
    
    <div class="form-group">
        <label for="team">ทีมช่าง:</label>
        <select id="team" name="team" required>
            <option value="">เลือกทีมช่าง</option>
            <option value="team-a">ทีมช่าง A</option>
            <option value="team-b">ทีมช่าง B</option>
            <!-- เพิ่มทีมอื่นๆ -->
        </select>
    </div>

    <div class="form-actions">
        <button type="button" class="nav-btn cancel-btn">ยกเลิก</button>
        <button type="submit" class="nav-btn add-btn">บันทึกงาน</button>
    </div>
</form>